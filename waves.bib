	journal = {Coastal Engineering},
	author = {Wienke, J. and Oumeraci, H.},
	month = may,
	year = {2005},
	keywords = {Breaking waves, Analytical description, Curling factor, Impact on slender cylinders, slamming, Large-scale experiments, Pile-up effect},
	pages = {435--462},
	file = {ScienceDirect Snapshot:/home/grios/Zotero/storage/4IF7UVJM/S0378383904001735.html:text/html;Wienke y Oumeraci - 2005 - Breaking wave impact force on a vertical and incli.pdf:/home/grios/Zotero/storage/QBWB3YTT/Wienke y Oumeraci - 2005 - Breaking wave impact force on a vertical and incli.pdf:application/pdf},
